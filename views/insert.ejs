<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Insert New Azure Credential</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">Azure Credential Manager</a>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container">
    <h1 class="mb-4">Insert New Azure Credential</h1>
    <form action="/insert" method="post">
      <div class="mb-3">
        <label for="azure_org_url" class="form-label">Azure Org URL:</label>
        <input type="text" class="form-control" id="azure_org_url" name="azure_org_url" required>
      </div>
      <div class="mb-3">
        <label for="project" class="form-label">Project:</label>
        <input type="text" class="form-control" id="project" name="project" required>
      </div>
      <div class="mb-3">
        <label for="repository" class="form-label">Repository:</label>
        <input type="text" class="form-control" id="repository" name="repository" required>
      </div>
      <div class="mb-3">
        <label for="pat" class="form-label">Personal Access Token (PAT):</label>
        <input type="text" class="form-control" id="pat" name="pat" required>
      </div>
      <button type="submit" class="btn btn-primary">Insert Credential</button>
    </form>
    <div class="mt-3">
      <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
  </div>

  <!-- Toast Container -->
  <% if (toast) { %>
    <div aria-live="polite" aria-atomic="true" class="position-fixed bottom-0 end-0 p-3">
      <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3000">
        <div class="toast-header">
          <strong class="me-auto"><%= toast.type === 'success' ? 'Success' : 'Error' %></strong>
          <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          <%= toast.message %>
        </div>
      </div>
    </div>
  <% } %>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Initialize toast if present -->
  <% if (toast) { %>
  <script>
    document.addEventListener("DOMContentLoaded", function(){
      var toastEl = document.querySelector('.toast');
      var toast = new bootstrap.Toast(toastEl);
      toast.show();
    });
  </script>
  <% } %>
</body>
</html>
